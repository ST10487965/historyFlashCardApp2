<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exitButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_flashcard"
    android:orientation="vertical"
    tools:context=".screenResult">

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:gravity="center|top"
        android:text="Your score: 0/5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:gravity="center|top"
        android:text="Feedback goes here:"
        android:textSize="30sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/reviewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0B0101"
        android:text="Review Answers"
        android:textSize="31sp"
        app:iconTint="#FF9800" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#573503"
        android:gravity="center"
        android:text="Exit"
        android:textSize="31sp" />
</LinearLayout>